@model PotteryProduct
<div class="float-lg-left float-md-left">
    <h2>@Model.Name</h2>
    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
    </div>
</div>
