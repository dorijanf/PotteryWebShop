@model PotteryProduct
<div class="container p-3 my-3 float-lg-left float-md-left">
    <h2>@Model.Name</h2>
    <img class="img-fluid" src="@Url.Content(Model.ImageUrl)" alt="@Model.Name" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
               asp-route-productId="@Model.Id">Add to cart</a>
        </p>
    </div>
</div>
