@model PotteryProduct
<div class="card h-100 text-black mb-3">
    <div class="box">
        <img class="card-img-top" src="@Url.Content(Model.ImageThumbnailUrl)" alt="">
    </div>
    <div class="card-body">
        <h4 class="card-title">
            <a asp-controller="PotteryProduct" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
        </h4>
        <h5 class="right">@Model.Price.ToString("c")</h5>
        <p class="card-text text-left">
            @Model.ShortDescription
        </p>
    </div>
    <div class="addToCart justify-content-center">
        <p class="button">
            <a class="btn btn-primary"
                asp-controller="ShoppingCart"
                asp-action="AddToShoppingCart"
                asp-route-productId="@Model.Id">Add to cart</a>
        </p>
    </div>
</div>