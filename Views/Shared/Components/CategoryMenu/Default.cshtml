@model IEnumerable<Category>

<div class="dropdown">
    <a asp-controller="PotteryProduct" 
       asp-action="Index" 
       class="dropdown-toggle" 
       data-toggle="dropdown">
            Pottery Products
            <strong class="caret"></strong>
    </a>
    <div class="dropdown-menu">
        @foreach (var category in Model)
        {
            <a class="dropdown-item" asp-controller="PotteryProduct" asp-action="List"
                asp-route-category="@category.CategoryName">@category.CategoryName</a>
        }
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" asp-controller="PotteryProduct" asp-action="List" asp-route-Category="">View all products</a>
    </div>
</div>
